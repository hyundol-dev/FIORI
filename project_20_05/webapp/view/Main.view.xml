<mvc:View xmlns:form="sap.ui.layout.form" controllerName="project2005.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:c="sap.ui.core"
    xmlns:t="sap.ui.table">
    <Page id="page" title="{i18n>title}">
        <Panel headerText = "Vertical Layout" expandable="true" expanded = "false">
        <!--expandable: 펼칠 수 있게, expanded: default를 열려있게(true)/닫혀있게(false)-->
            <headerToolbar>
                <Toolbar>
                    <Title text = "Vertical Layout (Toolbar)" />
                    <ToolbarSpacer />
                    <!--버튼에 아이콘 넣기-->
                    <Button icon = "sap-icon://save"/>
                </Toolbar>
            
            </headerToolbar>


            <l:VerticalLayout > <!--세로 정렬, 사이즈 지정 가능 (width)-->
                <Input value = "입력창 입니다." />
                <Text text = "Text 입니다." />
                <DatePicker />
                <Select />
                <DateRangeSelection />
                <StepInput />
            </l:VerticalLayout>
        </Panel>

        <Panel headerText = "Horizontal Layout" expandable="true">
            <l:HorizontalLayout >
                <Input value = "입력창 입니다." />
                <Text text = "Text 입니다." />
                <DatePicker />
                <Select />
                <DateRangeSelection />
                <StepInput />
            </l:HorizontalLayout>
        </Panel>

        <Panel headerText = "Form" expandable="true">
		<f:Form id="FormChangeColumn_threeGroups234"
			editable="true">
			<f:title>
				<c:Title text="Supplier" />
			</f:title>
			<f:layout>
                <!--Columns M , L, XL의 사이즈 정의-->
				<f:ColumnLayout
					columnsM="2"
					columnsL="3"
					columnsXL="4"
				/>
			</f:layout>
			<f:formContainers>
				<f:FormContainer title="Address">   
					<f:formElements>
						<f:FormElement label="Name">
							<f:fields>
								<Input value="{SupplierName}"/>
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="Name">
							<f:fields>
								<Input value="{SupplierName}"/>
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="Name">
							<f:fields>
								<Input value="{SupplierName}"/>
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="Name">
							<f:fields>
								<Input value="{SupplierName}"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>

                <!--새롭게 그룹핑-->
                <f:FormContainer title="Group 2">   
					<f:formElements>
						<f:FormElement label="Name">
							<f:fields>
								<Input value="{SupplierName}"/>
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="Name">
							<f:fields>
								<Input value="{SupplierName}"/>
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="Name">
							<f:fields>
								<Input value="{SupplierName}"/>
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="Name">
							<f:fields>
								<Input value="{SupplierName}"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
        </Panel>

        <!--SimpleForm-->
        <Panel headerText = "SimpleForm" expandable="true">
        <f:SimpleForm id="SimpleFormDisplayColumn_threeGroups234"
			editable="false"
			layout="ColumnLayout"
			title="Supplier"
			columnsM="2"
			columnsL="3"
			columnsXL="4"
			>
			<f:content>
            <!--Label + Text 가 기본 세트, Label + Link/... 등 vari O-->
				<c:Title text="Address" />
				<Label text="Name" />
				<Text id="nameText" text="{SupplierName}" />
				<Label text="Street/No." />
				<Input value = "Search..." />
                <Input value="{HouseNumber}">
                    <layoutData>
                        <l:GridData span = "XL2 L3 M4 S4" />
                    </layoutData>
                </Input>
				<Label text="ZIP Code/City" />
				<Text text="{ZIPCode} {City}" />
				<Label text="Country" />
				<Text id="countryText" text="{Country}" />
				<Label text="Web" />
				<Link text="Url" href="{Url}" />
				<c:Title text="Contact" />
				<Label text="Twitter" />
				<Text text="{Twitter}" />
				<Label text="Email" />
				<Text text="{Email}" />
				<Label text="Tel." />
				<Text text="{Tel}" />
				<c:Title text="Other" />
				<Label text="SMS" />
				<Text text="{Sms}" />
				<Label text="Mobile" />
				<Text text="{Mobile}" />
				<Label text="Pager" />
				<Text text="{Pager}" />
				<Label text="Fax" />
				<Text text="{Fax}" />
			</f:content>
		</f:SimpleForm>
        </Panel>


