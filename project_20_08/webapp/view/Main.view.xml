<mvc:View controllerName="project2008.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:t="sap.ui.table">
    <Page id="page" title="{i18n>title}">
        <content> 
            <t:Table
				rows="{/list}"
				selectionMode="MultiToggle"
				rowActionCount="1"
				paste="onPaste"
				ariaLabelledBy="title">
				<!--rowActionCount: row에 대한 Action을 지정하여 설정 가능
					최대 4개까지 가능-->
			<t:rowActionTemplate>
				<t:RowAction>
					<t:items>
						<t:RowActionItem 
							type="Delete" press="onRowDelete"/>
					</t:items>				
				</t:RowAction>
			
			</t:rowActionTemplate>
			<t:extension>
				<OverflowToolbar>
					<Title text="Table" level="H2"/>
					<ToolbarSpacer/>
					<Button 
						text="Add"
						press="onAdd"
						type="Emphasized"
						icon="sap-icon://add"/>
					<Button 
						text="Delete"
						press="onDelete"
						type="Emphasized"
						icon="sap-icon://delete"/>
				</OverflowToolbar>
			</t:extension>

			<t:columns>
				<t:Column hAlign="End">
					<Label width="100%" textAlign="Center" text="Name" />
					<t:template>
						<Input value = "{name}"/>
					</t:template>
				</t:Column>
				<t:Column hAlign="End">
					<Label width="100%" textAlign="Center" text="Age" />
					<t:template>
						<Input value = "{age}"/>
					</t:template>
				</t:Column>
			</t:columns>
			</t:Table>
        </content>

    </Page>
</mvc:View>
